<div class="search-section">
  <div class="search-section__filters">
    <div class="filters">
      <ul class="details">
        <%= filter_users(users: @users) %>
        <%= filter_users(users: @user) %>
      </ul>
      <ul class="details">
        <%= filter_types(type: @meal_type) %>

      </ul>
      <ul class="details">
        <%= filter_dates(dates: @menus) %>
        <%= filter_dates(dates: @menu) %>
      </ul>
    </div>
  </div>
  <div class="search-section__body">
    <div class="filters">
      <ul class="details">
        <%= filter_dietary(dietary: @dietary_restrictions) %>
      </ul>
    <div class="radio-btns">
      <%= filter_course_types(course_types: @course_types) %>
    </div>
    </div>
    <div class="search-bar">
      <%= render 'recipes/search_form' %>
    </div>
  </div>
  <div class="search-section__courses">
    <%= turbo_frame_tag id="planner_courses",
                        src: courses_path(meal_ids: @meal_ids),
                        data: { refresh_frame_target: "plannerCourses" } %>
    <div class="footer">
      <%= link_to "DONE", menus_path, class: "btn btn--light" %>
      <div id="refreshCourses"></div>
    </div>
  </div>
</div>
