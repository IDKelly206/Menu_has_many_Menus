<%- title "Meal Planner" %>

<div class="container"
     id="planner"
     data-course-type="<%= @course_type %>"
     data-meal-ids="<%= @meal_ids.join(", ") %>"
     data-course-ids="<%= @course_ids.join(", ") %>"
     data-controller="course-type-radio-selector"
     data-course-type-radio-selector-target="setter">
  <div class="header">
    <%= render 'shared/searchbar' %>
  </div>
  <div class="section-cards">
    <%= turbo_frame_tag dom_id(Grocery.new),
        data: {
          controller: "turbo-modal",
          path: new_grocery_path(course_ids: @course_ids),
          turbo_modal_ids_value: @course_ids
        } %>
    <%= render "recipes/recipes", recipes: @recipes, locals: { title: yield(:title) } %>
  </div>
</div>
