
<%- title "Meal Planner" %>

<div class="container">
  <div class="header">
    <%= render 'shared/searchbar' %>
  </div>
  <div class="section-cards">
    <%= turbo_frame_tag dom_id(Grocery.new),
        data: {
          controller: "grocery-modal",
          path: new_grocery_path(course_ids: @course_ids),
          grocery_modal_ids_value: @course_ids
        } %>
    <%= render "recipes/recipes", recipes: @recipes, locals: { title: yield(:title) } %>
  </div>
</div>
