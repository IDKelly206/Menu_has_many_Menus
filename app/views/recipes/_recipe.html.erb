<div id="<%= dom_id recipe %>">
  <div class="card-recipe">
    <div class="card-recipe__header">
        <%= image_tag recipe.recipe_image(size: "regular") %>
    </div>
    <div class="card-recipe__body">
      <div class="content-header">
      <%= link_to recipe.label, recipe_path(recipe.erecipe_id), :target => '_blank', class: "recipe-title" %>
      <p><%= link_to recipe.source, recipe.source_url, :target => '_blank' %></p>
      <p><%= @course_type %></p>
      </div>
      <div class="content-body">
        <ul class="details">
          <li class="item">
            <i class="fa-solid fa-user"></i>
            <span class="value"><%= recipe.yield %></span>
            <span class="title">Servings</span>
          </li>
          <li class="item">
            <i class="fa-solid fa-book-open"></i>
            <span class="value"><%= recipe.ingredients.count %></span>
            <span class="title">Ingredients</span>
          </li>
        </ul>
      </div>
    </div>
    <div class="card-recipe__footer">
      <%= recipe_form(page_title: locals[:title], erecipe_id: recipe.erecipe_id) %>
    </div>
  </div>
</div>
