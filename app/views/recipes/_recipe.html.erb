
  <div class="card-recipe" data-controller="visability">
    <div class="card-recipe__header" data-visability-target="hideable">
        <p class="label"><%= recipe.label %></p>
        <p class="source"><%= recipe.source %></p>
        <%= link_to (image_tag recipe.recipe_image(size: "regular")), recipe.source_url,
            data: { target: 'visability.hideable' },
            target: '_blank'%>
    </div>

    <div class="card-recipe__body">
      <div class="content-header is-hidden" data-visability-target="hideable">
        <p><%= recipe.label %></p>
        <p><%= recipe.source %></p>
      </div>
      <div class="content-body">
        <ul class="details">
          <li class="item">
            <i class="fa-solid fa-user"></i>
            <span class="value"><%= recipe.yield %></span>
            <span class="title" data-visability-target="hideable">Servings</span>
          </li>
          <li class="item">
            <i class="fa-solid fa-book-open"></i>
            <span class="value"><%= recipe.ingredients.count %></span>
            <span class="title" data-visability-target="hideable">Ingredients</span>
          </li>
        </ul>
        <button data-action="visability#toggleTargets"></button>
      </div>
    </div>

    <div class="card-recipe__footer is-hidden" data-visability-target="hideable">
      <ul class="list">
        <% recipe.ingredients.each do |i| %>
          <li class="item"><%= i['text'] %></li>
        <% end %>
      </ul>
    </div>

  </div>
