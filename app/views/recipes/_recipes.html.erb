<%= turbo_frame_tag "recipes",
    data: {
      controller: "infinite-scroll",
      action: "scroll@window->infinite-scroll#scroll"
    }, target: "_top" do %>
  <div id="recipe_cards" class="card-deck">
    <%= render recipes, locals: { title: yield(:title) } %>
  </div>
  <%= render partial: "/recipes/load_more" %>
<% end %>
