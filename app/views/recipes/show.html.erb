<%- title "Recipe" %>

<div class="container">
  <div class="header">
  <h1>Recipes Show page</h1>
  </div>
  <div class="section-cards">
    <div class="card-deck">
      <div class="card-recipe">
        <div class="card-recipe__body">
          <div class="content-header">
            <a href="#"><%= @recipe.label %></a>
            <p><%= @recipe.source %></p>
          </div>
          <div class="content-body">
            <ul class="details">
              <li class="item">
                <i class="fa-solid fa-user"></i>
                <span class="value"><%= @recipe.yield %></span>
              </li>
              <li class="item">
                <i class="fa-solid fa-book-open"></i>
                <span class="value"><%= @recipe.ingredients.count %></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="card-recipe__footer">
          <ul>
            <% @recipe.ingredients.each do |i| %>
              <li><%= i['text'] %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>
