<%- title "Household" %>
<main class="container">
  <div class="header">
    <div>

    <%= link_to "Add a User",
                new_user_path,
                data: { turbo_frame: dom_id(User.new) },
                class: "btn btn--dark" %>
    </div>
    <div>

    <h2>The <%= current_user.household.name %> Household</h2>
    </div>
    <div></div>
  </div>
  <div class="section-cards">
    <%= turbo_frame_tag dom_id(User.new) %>
    <%= turbo_frame_tag "users" do %>
      <div class="card-deck">
        <%= render @users %>
      </div>
    <% end %>
  </div>
</main>
