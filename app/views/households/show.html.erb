<%- title "Household" %>
<div class="body body--household">
  <div class="section--header section--header-household">
    <div class="section--header-household__banner">
      <h1>The <%= @household.users.first.name_last %> Household</h1>
    </div>
    <div class="section--header-household__new-user">
    <%= link_to "Add a Household Member",
                new_user_path,
                data: { turbo_frame: dom_id(User.new) },
                class: "btn btn--new" %>
    </div>
    <%= turbo_frame_tag dom_id(User.new) %>
  </div>
    <%= turbo_frame_tag "users", class: "section--cards section--cards-users" do %>
     <%= render @users %>
    <% end %>
</div>
