<%- title "Household" %>
<div class="body body--household">
  <div class="section--header section--header-household">
    <div class="header-banner">
      <h2 >The <%= @household.users.first.name_last %> Household</h2>
    </div>

    <%= link_to "Add a User",
                new_user_path,
                data: { turbo_frame: dom_id(User.new) },
                class: "btn btn--dark" %>

    <%= turbo_frame_tag dom_id(User.new) %>
  </div>

    <%= turbo_frame_tag "users", class: "section--cards section--cards-users" do %>
          <%= render @users %>
    <% end %>

</div>
