<%- title "Household" %>
<main class="container">
  <div class="header">
    <%= link_to "Add a User",
                new_user_path,
                data: { turbo_frame: dom_id(User.new) },
                class: "btn" %>
    <h2>The <%= current_user.household.name %> Household</h2>
  </div>
  <div class="section-cards">
    <%= turbo_frame_tag dom_id(User.new) %>
    <%= turbo_frame_tag "users" do %>
      <div class="card-deck">
        <%= render @users %>
      </div>
    <% end %>
  </div>
</main>
