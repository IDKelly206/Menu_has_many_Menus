<%- title "Products" %>
<div class="body">
  <div class="section-header">
    <h1>Products Index Page</h1>
    <%= form_with(url: products_path, method: "GET") do |f| %>
      <%= f.label :query, "Search for:" %>
      <%= f.text_field :query, multiple: true %>
      <%= f.submit "Search", name: nil %>
    <% end %>
  </div>
  <div class="section-cards">
    <div class="card-deck">
      <%= render @products %>
    </div>
  </div>
</div>
